# Environment Configuration Template for AnnDataAI
# Copy this file to .env and fill in your actual values

# ============================================
# IBM watsonx.ai Configuration (REQUIRED)
# ============================================

# Get this from IBM Cloud → Manage → Access (IAM) → API keys
WATSONX_API_KEY=your_ibm_cloud_api_key_here

# Get this from watsonx.ai Studio → Your Project → Settings
WATSONX_PROJECT_ID=your_watsonx_project_id_here

# Service URL based on your region:
# Dallas (us-south): https://us-south.ml.cloud.ibm.com
# Frankfurt (eu-de): https://eu-de.ml.cloud.ibm.com  
# Tokyo (jp-tok): https://jp-tok.ml.cloud.ibm.com
WATSONX_URL=https://us-south.ml.cloud.ibm.com

# ============================================
# Hugging Face Configuration (REQUIRED)
# ============================================

# Get this from Hugging Face → Settings → Access Tokens
# Required to access IBM Granite models on Hugging Face
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Authentication method (keep as 'iam')
WATSONX_AUTHENTICATOR=iam

# ============================================
# Application Configuration
# ============================================

# Port for backend server
PORT=3600

# Environment (development/production)
NODE_ENV=development

# ============================================
# Database Configuration
# ============================================

# MongoDB connection string
# Local: mongodb://localhost:27017/anndataai
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/anndataai
MONGODB_URI=mongodb://localhost:27017/anndataai

# Alternative database configuration (if using separate variables)
DB_HOST=localhost
DB_PORT=27017
DB_NAME=anndataai
DB_USER=
DB_PASSWORD=

# ============================================
# Security Configuration
# ============================================

# JWT secret for authentication
JWT_SECRET=your_super_secret_jwt_key_here

# Session secret
SESSION_SECRET=your_session_secret_here

# CORS origin for frontend
CORS_ORIGIN=http://localhost:3000

# ============================================
# Optional: External Services (if still needed)
# ============================================

# Email service (if using email notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# File upload configuration
MAX_FILE_SIZE=10mb
UPLOAD_PATH=./uploads

# ============================================
# Development/Testing Configuration
# ============================================

# Enable debug logging
DEBUG=false

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Deployment Configuration (Production)
# ============================================

# SSL configuration (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Redis configuration (for session storage in production)
REDIS_URL=

# ============================================
# Monitoring and Analytics (Optional)
# ============================================

# Application monitoring
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Analytics tracking
ANALYTICS_ID=

# ============================================
# SETUP INSTRUCTIONS:
# ============================================
# 1. Copy this file to .env in the backend directory
# 2. Fill in your IBM watsonx.ai credentials (REQUIRED)
# 3. Set up your database connection
# 4. Generate secure JWT and session secrets
# 5. Run the test script: node test-watson-setup.js
# 6. Start the server: npm run dev
